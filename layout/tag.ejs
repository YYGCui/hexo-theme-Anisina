---
layout: layout
---
<style>
    .intro-header .site-heading {
        margin: 50px;
    }
</style>

<!-- Page Header -->
<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 ">
                <div class="site-heading text-center">
                    <h1><%= config.tag.title || config.title %></h1>
                    <span class="subheading"><%= config.tag.description || config.subtitle || "" %></span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div class="tag">
                <h2 class="tag-title">
                <span class="fa fa-tag">
                    <a href="<%- url_for(config.tag_dir + '/' + page.tag) %>"><%= page.tag %></a>
                </span>
                </h2>
            <!-- 标签列表 -->
            <% page.posts.each(function(post){ %>
            <div class="one-tag-list">
                <div class="post-preview">
                    <span class="archive-date"><%= post.date.format(config.date_format) %></span>
                    <a href="<%- config.root %><%- post.path %>">
                        <h3 class="post-title category">
                            <%- post.title || "Untitled" %>
                        </h3>
                        <% if (post.subtitle && post.subtitle.length) { %>
                        <h3 class="post-subtitle category">
                            <%- post.subtitle %>
                        </h3>
                        <% } %>
                    </a>
                </div>
                <hr>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<%- partial('_partial/pagination') %>